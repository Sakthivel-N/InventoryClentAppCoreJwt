@model InventoryClentAppCoreJwt.Models.Product

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Products.cshtml";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" /><br />
                <label style="color:green;">@Html.Raw(ViewBag.Message)</label>
            </div>
        </form>
        @if (Model != null)
        {
            <h2>Product Updated </h2>
            <table class="table table-sm table-striped table-bordered m-2">
                <thead>
                    <tr>
                       
                        <th>Name</th>
                        <th>Price</th>
                       
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.Name</td>
                        <td>@Model.Price</td>
                       
                    </tr>
                </tbody>
            </table>
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
